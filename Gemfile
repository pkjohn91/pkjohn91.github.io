source "https://rubygems.org"

# Jekyll 엔진
gem "jekyll", "~> 4.4.1"

# Minimal Mistakes 테마 및 원격 로딩을 위한 필수 플러그인
gem "minimal-mistakes-jekyll"

# _config.yml에 등록된 추가 플러그인들 (에러 발생 원인 해결)
gem "jekyll-include-cache"
gem "jekyll-gist"
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-paginate"

# Ruby 3.x 버전 이상에서 필요한 라이브러리 (서버 실행용)
gem "webrick"

# Ruby 3.4 버전 경고(Fiddle) 해결을 위한 추가
gem "fiddle"
gem "base64"
gem "bigdecimal"
gem "mutex_m"
gem "fiddle"

# 윈도우 환경 성능 향상을 위한 설정 (선택 사항)
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]